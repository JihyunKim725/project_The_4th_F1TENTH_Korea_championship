<launch>
<!-- odom -> base_footprint -->
<node pkg="tf2_ros" type="static_transform_publisher" name="odom_to_base_footprint"
args="0 0 0 0 0 0 odom base_footprint" />
<!-- base_footprint -> base_link -->
<node pkg="tf2_ros" type="static_transform_publisher" name="base_footprint_to_base_link"
      args="0 0 0 0 0 0 base_footprint base_link" />

<!-- base_link -> center_back_link -->
<node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_center_back_link"
      args="-0.15 0 0 0 0 0 base_link center_back_link" />

<!-- base_link -> imu_link -->
<node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_imu_link"
      args="-0.1 0 0 0 0 0 base_link imu" />

<!-- base_link -> base_scan (예: 레이저 스캐너가 앞쪽 위에 있다고 가정) -->
<node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_base_laser"
      args="0.1 0 0 0 0 0 base_link laser" />

<!-- base_link -> wheel_left_link -->
<node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_wheel_left_link"
      args="0 0 0 0 0 0 base_link wheel_left_link" />

<!-- base_link -> wheel_right_link -->
<node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_wheel_right_link"
      args="0 0 0 0 0 0 base_link wheel_right_link" />
</launch>

